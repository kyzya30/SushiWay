@model Category

@using (Html.BeginForm("Addcategory","Admin", FormMethod.Post,new { id="AddCategoryForm"}))
{

<div>
    <!-- Modal -->

    <div class="modal fade" id="myModal" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content modalContentCategoryStyle" >
                <div class="modal-header" style="background: #4b4b4b; text-color: white; height: 50px">

                    <h4 class="modal-title"><b>Добавить новую категорию</b></h4>
                </div>
                <div class="modal-body">
                    <span id="errorMessageAddCat" style="color:red; margin-left: 76px;"></span>
                    <div class="form-group">

                        <input name="NameRus" id="NameRus" type="text" class="form-control modifyCategoryNameRusbtn" maxlength="50" placeholder="Название категории"/>
                        <input name="NameUkr" id="NameUkr" type="text" class="form-control modifyCategoryNameUkrBtn" maxlength="50" placeholder="Назва категорії" />
                        <input name="Priority" class="priorityCategoryBtn" id="Priority" required type="number" min="1" max="999" value="1">
                    </div>
                    

                    <!--<button type="button" class="close" data-dismiss="modal">&times;</button>-->
                </div>
                <!--<div class="modal-footer"></div>-->
                <button type="button" class="btn btn-default cancelBtn"
                        data-dismiss="modal">
                    <b>Отмена</b>
                </button>

                <button type="submit" class="btn btn-default submitBtn">
                    <b>Добавить</b>
                </button>

                <!--<input type="button" class="btn btn-default" style="border-radius:0 ; background:#808080;color="#ffffff; width:127px;height:40px;position:fixed; top:150px;left:246px" value="Отправить"/>-->


                <p><img style="position: absolute; bottom: 0;right: 0" src=@Url.Content("~/Content/Images/Controls/Admin/bg-alert-new.png") /> </p>

            </div>

        </div>
    </div>
    <script type="text/javascript">
                            $(document).ready(function () {
                                function CheckField(element, event) {
                                    if (element.val().trim() == "") {
                                        event.preventDefault();
                                        element.addClass("errorStyle");
                                        $("#errorMessageAddCat").text("Выделенные поля должны быть заполнены");
                                    }
                                }

                                $("#NameRus, #NameUkr, #Priority").change(function () {
                                    if ($(this).val() != "") {
                                        $(this).removeClass("errorStyle");
                                        $("#errorMessageAddCat").text("");
                                    }
                                });

                                $("#AddCategoryForm").submit(function (event) {
                                    CheckField($("#NameRus"), event);
                                    CheckField($("#NameUkr"), event);
                                    CheckField($("#Priority"), event);
                                });

                            });
    </script>
</div>

}