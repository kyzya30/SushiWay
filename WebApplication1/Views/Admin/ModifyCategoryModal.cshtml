@model Category

@using (Html.BeginForm("ModifyCategoryModal", "Admin",  FormMethod.Post, new { id = "ModifyCategoryForm"}))
{


    <div>
        <!-- Modal -->

        <div class="modal fade" id="ModifyCategoryModal" role="dialog">
            <div class="modal-dialog">

                <!-- Modal content-->
                <div class="modal-content" style="width: 470px; height: 284px; border-width: 1px; border-style: solid; border-color: #4b4b4b; border-radius: 0; color: white">
                    <div class="modal-header" style="background: #4b4b4b; text-color: white; height: 50px">

                        <h4 class="modal-title"><b>Редактировать категорию</b></h4>
                    </div>

                    
                    <div class="modal-body">
                        <span id="errorMessage" style="color:red; margin-left: 76px;"></span>
                        <div class="form-group">
                            <input id ="CategoryId" name="CategoryId" type="hidden" class="form-control" placeholder="Назва категорії" hidden/>
                            <input id="ModifyCategoryNameRus" name="NameRus" type="text" class="form-control" style="border-radius: 0; width: 195px; height: 40px; position: fixed; top: 80px; left: 103px; margin-top: 50px; margin-left: 5px;" placeholder="Название категории"/>                        
                            <input id="Priority" type="number" name="Priority" min="1" max="999" value="1" style="width: 59px; height: 39px; position: fixed; top: 80px; left: 315px; margin-top: 50px; border-width: 1px; border-style: solid; border-color: #bfbfbf;">
                            <input id="ModifyCategoryNameUkr" name="NameUkr" type="text" class="form-control" style="border-radius: 0; width: 195px; height: 40px; position: fixed; top: 140px; left: 103px; margin-top: 50px; margin-left: 5px;" placeholder="Назва категорії" />
                        </div>
                        <script type="text/javascript">
                            $(document).ready(function () {
                                function CheckField(element, event) {
                                    if (element.val() == "") {
                                        event.preventDefault();
                                        element.addClass("errorStyle");
                                        $("#errorMessage").text("Выделенные поля должны быть заполнены");
                                    }
                                }

                                $("#ModifyCategoryNameRus, #ModifyCategoryNameUkr").change(function () {
                                    if ($(this).val() != "") {
                                        $(this).removeClass("errorStyle");
                                        $("#errorMessage").text("");
                                    }
                                });

                                $("#ModifyCategoryForm").submit(function (event) {
                                    CheckField($("#ModifyCategoryNameRus"), event);
                                    CheckField($("#ModifyCategoryNameUkr"), event);
                                });

                                $("#cancelBtn").click(function () {
                                    $("#errorMessage").text("");
                                });

                            });
                        </script>


                        <!--<button type="button" class="close" data-dismiss="modal">&times;</button>-->
                    </div>
                    <!--<div class="modal-footer"></div>-->
                    <button id="cancelBtn" type="button" class="btn btn-default" style="border-radius: 0; background: #bfbfbf; color: #ffffff; width: 127px; height: 40px;position: fixed; top: 230px; left: 103px; margin-top: 30px;"
                                                                                              
                            data-dismiss="modal">
                        <b>Отмена</b>
                    </button>

                    <button type="submit" id="ModifyCategory" class="btn btn-default" style="border-radius: 0; background: #808080; color: #ffffff; width: 127px; height: 40px;     position: fixed; top: 230px; left: 243px; margin-top: 30px;">
                        <b>Изменить</b>
                    </button>

                    <!--<input type="button" class="btn btn-default" style="border-radius:0 ; background:#808080;color="#ffffff; width:127px;height:40px;position:fixed; top:150px;left:246px" value="Отправить"/>-->



                    <p><img style="position: absolute; bottom: 0; right: 0" src=@Url.Content("~/Content/Images/Controls/Admin/bg-alert-edit.png") /></p>
                    


                </div>

            </div>
        </div>

    </div>


}